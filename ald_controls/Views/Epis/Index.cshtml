@model IEnumerable<ald_controls.Models.Epi>

@{
    ViewData["Title"] = "Index";
}


<h1>EPIs</h1>
@if (User.IsInRole("Admin")) {
    <p>
        <a asp-action="Create" class="btn btn-primary">Adicionar Novo</a>
    </p>
}
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Nome)</th>
            <th>@Html.DisplayNameFor(model => model.Descricao)</th>
            @if (User.IsInRole("Admin")) {
                <th>Ações</th>
            }
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                        <td>
                                <a href="#" data-bs-toggle="modal" data-bs-target="#descricaoModal-@item.Id">
                                        @Html.DisplayFor(modelItem => item.Descricao)
                                </a>

                                <!-- Modal -->
                                <div class="modal fade" id="descricaoModal-@item.Id" tabindex="-1" aria-labelledby="descricaoModalLabel-@item.Id" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="descricaoModalLabel-@item.Id">Descrição do EPI</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                @item.Descricao
                                            </div>
                                        </div>
                                    </div>
                                </div>
                        </td>
            @if (User.IsInRole("Admin")) {
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Excluir</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detalhes</a>
                </td>
            }
        </tr>
    }
    </tbody>
</table>
