@model IEnumerable<ald_controls.Models.RegistroEpi>

@{
    ViewData["Title"] = "Index";
}


<h1>Registros de EPIs</h1>
@if (User.IsInRole("Admin")) {
    <p>
        <a asp-action="Create" class="btn btn-primary">Adicionar Novo</a>
    </p>
}
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Colaborador</th>
            <th>EPIs</th>
            <th>@Html.DisplayNameFor(model => model.DataRegistro)</th>
            <th>@Html.DisplayNameFor(model => model.Pontos)</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>@(item.Colaborador != null ? item.Colaborador.Nome : "-")</td>
            <td>@(item.Epi != null ? item.Epi.Nome : "-")</td>
            <td>@Html.DisplayFor(modelItem => item.DataRegistro)</td>
            <td>@Html.DisplayFor(modelItem => item.Pontos)</td>
        </tr>
    }
    </tbody>
</table>
